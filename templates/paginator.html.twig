<div class="row">
    <div class="col-full">
        <nav class="pgn"><ul>
                <li><a class="pgn__prev"
                       href="{% if (paginator.currentPage is not same as (1) ) %}{{ path(pathName , {'page' : max([1, paginator.currentPage - 1])}) }}{% else %}#{% endif %}">Prev</a>
                </li>
                {% for i in 1..max([paginator.lastPage, 1]) %}
                    <li>
                        <a class="pgn__num {% if i is same as (paginator.currentPage) %}current{% endif %}"
                           href="{{ path(pathName, {'page': i}) }}">
                            {{ i }}
                        </a>
                    </li>
                {% endfor %}
                <li><a class="pgn__next"
                       href="{% if paginator.lastPage is not same as (paginator.currentPage) %}{{ path(pathName, {'page' : min([paginator.lastPage, paginator.currentPage + 1])}) }}{% else %}#{% endif %}">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
